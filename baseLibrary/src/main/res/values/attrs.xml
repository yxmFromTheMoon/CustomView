<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="indicatorGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="selectIndicatorDrawable" format="integer|reference" />
        <attr name="normalIndicatorDrawable" format="integer|reference" />
        <attr name="descTextColor" format="color" />
        <attr name="descTextSize" format="dimension" />
        <attr name="bottomBackground" format="color" />
        <attr name="dotSize" format="dimension"/>
        <attr name="dotDistance" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TrackIndicator">
        <attr name="tabVisibleNum" format="integer"/>
        <attr name="selectTabColor" format="color"/>
        <attr name="normalTabColor" format="color"/>
    </declare-styleable>
</resources>