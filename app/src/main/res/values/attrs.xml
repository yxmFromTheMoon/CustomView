<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextView">

        <attr name="customText" format="string" />
        <attr name="customTextSize" format="dimension" />
        <attr name="customTextColor" format="reference|color" />

        <attr name="customInputType">
            <enum name="number" value="1" />
            <enum name="password" value="2" />
            <enum name="text" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="reference|color" />
        <attr name="innerColor" format="reference|color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="circleProgressOuterColor" format="reference|color" />
        <attr name="circleProgressInnerColor" format="reference|color" />
        <attr name="circleProgressBorderWidth" format="dimension" />
        <attr name="progressPercentColor" format="reference|color" />
        <attr name="progressTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="starNormal" format="reference" />
        <attr name="starFocus" format="reference" />
        <attr name="gradeNumbers" format="integer" />
    </declare-styleable>

    <declare-styleable name="LetterSideBar">
        <attr name="letterColor" format="reference|color" />
        <attr name="letterSize" format="dimension" />
        <attr name="highLightLetterColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <attr name="color_tick" format="reference|color" />
        <attr name="duration" format="integer" />
        <attr name="color_unchecked_stroke" format="color|reference" />
        <attr name="color_checked" format="color|reference" />
        <attr name="color_unchecked" format="reference|color" />
        <attr name="stroke_width" format="dimension" />
        <attr name="outer_border_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KGSlideMenu">
        <attr name="rightMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundRectProgressBar">
        <attr name="cbarRoundColor" format="color" />
        <attr name="cbarProgressColor" format="color" />
        <attr name="cbarFillColor" format="color" />
        <attr name="cbarOrientation">
            　　
            <enum name="HORIZONTAL" value="0"></enum>
            　　
            <enum name="VERTICAL" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>