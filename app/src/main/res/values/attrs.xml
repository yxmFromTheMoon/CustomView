<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextView">

        <attr name="customText" format="string" />
        <attr name="customTextSize" format="dimension" />
        <attr name="customTextColor" format="reference|color" />

        <attr name="customInputType">
            <enum name="number" value="1" />
            <enum name="password" value="2" />
            <enum name="text" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="reference|color" />
        <attr name="innerColor" format="reference|color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="reference|color" />
    </declare-styleable>
</resources>