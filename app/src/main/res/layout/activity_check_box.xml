<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.yxm.customview.view.SmoothCheckBox
        android:id="@+id/checkbox"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:color_unchecked_stroke="@android:color/white"
        app:color_tick="@android:color/white"
        app:color_unchecked="@android:color/transparent"
        app:color_checked="@android:color/white"
        app:stroke_width="2dp"
        app:outer_border_width="2dp"
        android:layout_centerInParent="true" />
</RelativeLayout>